shell-integration-features = no-cursor,no-sudo,title

# cursor and mouse
cursor-style = bar
cursor-style-blink = false
mouse-hide-while-typing = true

# opacity
cursor-opacity = 0.9
background-opacity = 0.9

# blur (has to be set globally in KDE's Desktop Effects)
background-blur = true

# font
font-family = JetBrainsMono Nerd Font
font-size = 13.0

# windows
window-decoration = none
window-padding-color = extend
window-padding-x = 0
window-padding-y = 0
window-width = 1000
window-height = 1000

# keybinds
keybind = ctrl+s>s=new_split:down
keybind = ctrl+s>v=new_split:right
keybind = ctrl+s>h=goto_split:left
keybind = ctrl+s>j=goto_split:bottom
keybind = ctrl+s>k=goto_split:top
keybind = ctrl+s>l=goto_split:right
keybind = ctrl+s>z=toggle_split_zoom
keybind = ctrl+s>left=resize_split:left,100
keybind = ctrl+s>down=resize_split:down,100
keybind = ctrl+s>up=resize_split:up,100
keybind = ctrl+s>right=resize_split:right,100
keybind = ctrl+s>equal=equalize_splits

keybind = ctrl+s>f=toggle_fullscreen
keybind = ctrl+s>w=toggle_window_decorations
keybind = ctrl+s>t=toggle_tab_overview

keybind = ctrl+s>c=new_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>one=goto_tab:1
keybind = ctrl+s>two=goto_tab:2
keybind = ctrl+s>three=goto_tab:3
keybind = ctrl+s>four=goto_tab:4
keybind = ctrl+s>five=goto_tab:5
keybind = ctrl+s>six=goto_tab:6
keybind = ctrl+s>seven=goto_tab:7
keybind = ctrl+s>eight=goto_tab:8
keybind = ctrl+s>nine=goto_tab:9

keybind = ctrl+s>r=reload_config
