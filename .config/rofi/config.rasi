    display-drun: " 󰀘  App ";
    display-run: "   Run ";
    display-combi: " 󰕘  Combi ";
    display-Network: " 󰤨  Network ";
    sidebar-mode: true;
    filebrowser {
        directory: "~/Documents/literature";
    }
}
