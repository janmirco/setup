@theme "launchers/type-2/style-2.rasi"
@import "colors/onedark.rasi"

* {
    font: "JetBrainsMono Nerd Font 10";
}

configuration {
    modi: "combi,window,drun,run,filebrowser";
    combi-modi: "window,drun,filebrowser";
    icon-theme: "Oranchelo";
    show-icons: true;
    terminal: "ghostty";
    drun-display-format: "{icon} {name}";
